<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/msg_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/lisa_chat_icon" />

        <TextView
            android:id="@+id/sender_chat_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/msg_sender"
            android:background="@drawable/edit_txt"
            android:padding="10dp"
            android:text="Hi Daniel I'm fine" />

    </RelativeLayout>

    
        <RelativeLayout
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" 
        >

        <ImageView
            android:id="@+id/msg_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/img_thumbnail_slider" />

        <TextView
            android:id="@+id/receiver_chat_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/msg_receiver"
            android:background="@drawable/edit_txt"
            android:padding="10dp"
            android:text="Hi Lisa What's up" />

    </RelativeLayout>
    
    
    
</RelativeLayout>